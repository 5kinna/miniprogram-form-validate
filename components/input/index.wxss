.input {
  background-color: #fff;
  margin: 10rpx 0 0 0;
}

.input-box {
  box-sizing: border-box;
  width: 496rpx;
  min-height: 72rpx;
}

.input-box.disabled {
  color: rgba(80, 80, 80, 0.4);
}

.input-box input {
  box-sizing: border-box;
  height: 100%;
  min-height: 72rpx;
  padding: 0 16rpx;
  flex: 1;
  min-width: 496rpx;
  width: 100%;
}

.input-box textarea {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx;
  line-height: 72rpx;
  height: 144rpx;
}